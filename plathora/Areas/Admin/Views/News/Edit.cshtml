<div class="row" style="margin-top:10px;">
    <div class="col-md-12">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title">Add News</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="title">Title</label>
                                <input type="text" class="form-control" asp-for="title" id="name1" placeholder="First Name">
                                <span asp-validation-for="title" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="form-group">
                                <label class="form-label" asp-for="date1">Date</label>
                                <input asp-for="date1" class="form-control" >
                            </div>
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-12">
                            <label class="form-label" asp-for="description">Description</label>
                            <textarea class="form-control" asp-for="description" rows="5"></textarea>

                            <span asp-validation-for="description" class="text-danger"></span>

                        </div>

                    </div>
                    <div class="form-row">

                        <label asp-for="img">Image</label>


                        <div class="btn btn-primary btn-icon-text">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <input asp-for="img" type="file" value="Upload" />
                            <span asp-validation-for="img" class="text-danger"></span>
                        </div>
                       

                    </div>
                    <button type="submit" style="margin-right:5px;" class="btn btn-primary "><i class="fa fa-save" style="margin-right:0.7em"></i>Save</button>
                    <a asp-action="index" class="btn btn-rounded btn-info float-right"><i class="fa fa-backward" style="margin-right:0.7em"></i>Back</a>

                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
