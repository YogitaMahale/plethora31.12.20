        <div class="row">

            <div class="col-md-12 col-lg-12">
                <div class="card-header">
                    <h3 class="card-title">Business List</h3>
                </div>
                <div class="card">
                    <div style="text-align:right;padding-right: 20px;padding-left: 0px;padding-top: 10px;">
                        <a class="btn btn-sm btn-primary float-md-right;" asp-action="Create"> Add New Business</a>
                    </div>


                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example2" class="hover table-bordered border-top-0 border-bottom-0">
                                <thead>
                                    <tr>
                                        <th>Sector Name</th>
                                        <th>Business Name</th>
                                        <th>Icon</th>
                                        <th>Image</th>
                                        <th class="text-warning">Actions</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {

                                    <tr>
                                        <td>
                                            @item.SectorRegistration.name
                                        </td>
                                        <td>
                                            @item.name
                                        </td>
                                        <td>
                                            @*<img alt="image" src="@Url.Content(item.img)" />*@
                                            @if (item.img == null || item.img == "")
                                            {
                                                <img src="~/uploads/blank1.jpg" style="width:150px;height:100px;" alt="img">
                                            }
                                            else
                                            {
                                                <img src="@item.img" style="width:150px;height:100px;" alt="img">
                                            }
                                        </td>
                                        <td>
                                            @*<img alt="image" src="@Url.Content(item.photo)" />*@
                                            @if (item.photo == null || item.photo == "")
                                            {
                                                <img src="~/uploads/blank1.jpg" style="width:150px;height:100px;" alt="img">
                                            }
                                            else
                                            {
                                                <img src="@item.photo" style="width:150px;height:100px;" alt="img">
                                            }
                                        </td>

                                        <td>
                                            <a class="btn btn-primary btn-sm mb-1" data-toggle="tooltip" data-original-title="View" asp-action="Edit" asp-route-id="@item.id">  <i class="fa fa-edit"></i> </a>
                                            <a class="btn btn-danger btn-sm text-white mb-1" data-toggle="tooltip" data-original-title="Delete" asp-action="Delete" asp-route-id="@item.id"><i class="fa fa-trash-o"></i></a><br>

                                            @*<a class="text-success" asp-action="Edit" asp-route-id="@item.id">
                <i class="fas fa-edit"></i> Edit
            </a>

            <a class="text-danger" asp-action="Delete" asp-route-id="@item.id">
                <i class="far fa-trash-alt"></i> Delete
            </a>*@
                                        </td>
                                    </tr>
                                    }


                                </tbody>
                                @*<tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Percentage</th>
                                        <th class="text-warning">Actions</th>
                                    </tr>
                                </tfoot>*@
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



