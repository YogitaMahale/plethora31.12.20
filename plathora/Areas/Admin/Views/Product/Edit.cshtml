<script type="text/javascript">
    $(function() {
        $("#sectorid").change(function () {

            var url = '@Url.Content("~/")' + 'Admin/Product/getBusinessRegbySectorid';
            var ddlsource = "#sectorid";
            $.getJSON(url,
                { sectorid: $(ddlsource).val() },
                function (data) {
                //   console.log(data);
                    var item = '';
                    $("#businessid").empty();
                    $.each(data, function (i, row) {

                        item += "<option value='" + row.value + "'>" + row.text + "  </option > ";
                       // alert(row);
                    });
                    $("#businessid").html(item);
                }
            )
        });
    });
