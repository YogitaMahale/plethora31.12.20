@model ProductEditViewModel;
@{
    ViewBag.Title = "Edit Details";
}

    <div class="side-app">
        @*<div class="page-header">


        </div>*@
        <!-- end row -->
        <div class="row" style="margin-top:10px;">
            <div class="col-md-12">
                <div class="card m-b-20">
                    <div class="card-header">
                        <h3 class="card-title">Edit</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="sectorid"></label>
                                        <select name="sectorid" id="sectorid" asp-for="sectorid" class="form-control"
                                                asp-items="@(new SelectList(ViewBag.SectorList,"id","name"))"
                                                onchange="DoPostBack();">
                                            @*asp-items="@ViewBag.Countries"*@
                                            <option>--- Select  ---</option>
                                        </select>
                                        <span asp-validation-for="sectorid" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="businessid">Percentage</label>
                                        <select name="businessid" id="businessid" asp-for="businessid" class="form-control"
                                                asp-items="@ViewBag.business">
                                            @*disabled="@(ViewBag.StateEnabled == false ? "disabled" : null)"*@
                                            <option>--- Select  ---</option>
                                        </select>
                                        <span asp-validation-for="businessid" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="productName"></label>
                                        <input type="text" class="form-control" asp-for="productName" id="name1" placeholder="Enter Name">
                                        <span asp-validation-for="productName" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <div class="form-group">
                                        <label class="form-label" asp-for="img">Percentage</label>
                                        <div class="btn btn-primary btn-icon-text">
                                            <i class="fas fa-cloud-upload-alt"></i>
                                            <input asp-for="img" type="file" value="Upload" />
                                            <span asp-validation-for="img" class="text-danger"></span>
                                        </div>
                                        <span asp-validation-for="img" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-3">
                                    <div class="form-group">
                                        @if (Model.img1 == null || Model.img1 == "")
                                        {
                                            <img src="~/uploads/blank1.jpg" style="width:150px;height:100px;" alt="img">
                                        }
                                        else
                                        {
                                            <img src="@Model.img1" style="width:150px;height:100px;" alt="img">
                                        }
                                    </div>
                                </div>
                            </div>
                            <button type="submit" style="margin-right:5px;" class="btn btn-primary "><i class="fa fa-edit" style="margin-right:0.7em"></i>Update</button>
                            <a asp-action="index" class="btn btn-rounded btn-info float-right"><i class="fa fa-backward" style="margin-right:0.7em"></i>Back</a>



                        </form>
                    </div>
                </div>
            </div>
        </div>





    </div>
