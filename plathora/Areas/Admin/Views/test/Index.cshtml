@{
}
<form name="form1" asp-controller="test" asp-action="ProcessForm">
    <h2>Select Country :</h2>
    <select name="country" id="country"
            asp-items="@ViewBag.Countries"
            onchange="DoPostBack();">
        <option selected>--- Select  ---</option>
    </select>
    <br />
    <h2>Select State :</h2>
    <select name="state" id="state"
            asp-items="@ViewBag.States"
            disabled="@(ViewBag.StateEnabled == false ? "disabled" : null)">
        <option selected>--- Select  ---</option>
    </select>
</form>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    function DoPostBack() {
        var select = document.getElementById("country");
        var option = select.options[select.selectedIndex];
        if (option.value != "Please select") {
            document.form1.action = "/test/GetStates";
            document.form1.submit();
        }
    }
</script>